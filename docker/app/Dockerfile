FROM python:3.11.7-slim

ENV PYTHONUNBUFFERED 1
ENV PYTHONDONTWRITEBYTECODE 1

ENV APP_BROKER_URI =$APP_BROKER_URI
ENV DOCKER_PG_USER=$DOCKER_PG_USER
ENV DOCKER_PG_PASSWORD=$DOCKER_PG_PASSWORD
ENV DOCKER_PG_DB=$DOCKER_PG_DB
ENV DOCKER_PG_URI=$DOCKER_PG_CONTAINER_NAME

RUN apt-get update

# Installig python libraries
COPY ./requirements.txt /requirements.txt
RUN pip install -r /requirements.txt

#COPY ./app/ /app
#WORKDIR /app

EXPOSE 8000